{
  "manifest_version": 3,
  "name": "Web Drawing Extension",
  "version": "1.0",
  "description": "Vẽ và highlight trên trang web",
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["style.css"]
    }
  ],
  "action": {
    "default_icon": "icon.png"
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "permissions": ["activeTab", "storage", "tabs"]
}
